<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_get_wifi_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取状态" />

        <TextView
            android:id="@+id/tv_wifi_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_get_wifi_rx_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取网络速率" />

        <TextView
            android:id="@+id/tv_wifi_rx_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_get_wifi_tx_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取上传速率" />

        <TextView
            android:id="@+id/tv_wifi_tx_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_get_wifi_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取可连接wifi列表" />

        <TextView
            android:id="@+id/tv_wifi_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>